/* pages/home/home.wxss */
.container{
  width: 100%;
  height: 100vh;
  background-color: #ECECEC;
  display: flex;
  flex-direction: column;
}
.lessonBox{
  /* border: 1px solid red; */
  width: 90%;
  height: 170rpx;
  border-radius: 12rpx;
  background-color: white;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 12rpx 0rpx #838383;
  /* border: 1px solid red; */
  display: flex;
  flex-direction: row;
  position: relative;
}
.lessonImg{
  width: 54px;
  height: 54px;
  /* border: 1px solid red; */
  position: absolute;
  top: 35rpx;
  left: 50rpx;
}
.lessonInfo{
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 35rpx;
  left: 170rpx;
}
.lessonName{
  font-size: 36rpx;
  font-weight: bold;
}
.teacherName{
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #A6A6A6;
}
.gotoIcon{
  width: 24px;
  height: 24px;
  position: absolute;
  right: 40rpx;
  top: 65rpx;
}