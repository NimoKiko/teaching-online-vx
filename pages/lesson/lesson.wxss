.container {
  /* border: 1px solid red; */
  background-color: white;
}

.tab {
  /* border: 1px solid blue; */
  box-shadow: 0rpx 1rpx 12rpx rgb(194, 194, 194);
  background-color: #ECECEC;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.tabText {
  flex-grow: 0.33;
  font-size: 32rpx;
  color: #464646;
  text-align: center;
  font-weight: bold;
}

.pageBox {
  /* border: 1px solid red; */
  width: 100%;
  height: 100%;
}

.page1 {
  /* border: 1px solid red; */
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.classBox{
  width: 100%;
  height: 150rpx;
  /* border: 1px solid red; */
  box-shadow: 0rpx 0rpx 20rpx 10rpx rgb(219, 219, 219);
  display: flex;
  flex-direction: row;
  position: relative;
}
.iconBox{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  background-color: #0EBF8A;
  position: absolute;
  top: 30rpx;
  left: 40rpx;
  position: relative;
}
.img{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 22rpx;
  left: 22rpx;
}
.text{
  position: absolute;
  top: 55rpx;
  left: 160rpx;
  font-size: 36rpx;
  color: #464646;
  font-weight: bold;
}
.gotoIcon{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 55rpx;
  right: 30rpx;
}