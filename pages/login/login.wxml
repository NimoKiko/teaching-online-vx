<!--pages/login/login.wxml-->
<view class="container" >
  <view class="firstBox">
    <text class="title">登录</text>
  </view>
  <view class="middleBox">
    <view class="account">
      <input v-model="input" placeholder="请输入学号/工号"></input>
      <view class="separator"></view>
    </view>
    <view class="password">
      <input v-model="input" placeholder="请输入密码"></input>
      <view class="separator"></view>
    </view>
    <view class="protocol">
      <radio v-model="protocolRadio" label="1" >已阅读《协议》
      </radio>
    </view>
  </view>
  <view class="bottomBox">
    <view class="loginBox">
      <button bindtap="toHome" style="width:235px;height:47px;font-size:18px;background-color:#46A1DD;color: white;">登 录</button>
    </view>
    <view class="registerBox">
      <text class="registerLink" bindtap="toRegister">新用户注册</text>
    </view>
  </view>
</view>