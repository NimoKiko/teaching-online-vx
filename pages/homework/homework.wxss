.container {
  /* border: 1px solid red; */
  display: flex;
  flex-direction: column;
}

.topBox {
  /* border: 1px solid red; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 180rpx;
  width: 100%;
  position: relative;
}

.taskName {
  font-size: 48rpx;
  font-weight: bold;
  color: #464646;
  position: absolute;
  top: 40rpx;
  left: 30rpx;

}

.deadlineText {
  font-size: 20rpx;
  color: rgb(126, 126, 126);
  position: absolute;
  top: 120rpx;
  left: 35rpx;
}

.time {
  font-size: 20rpx;
  color: rgb(126, 126, 126);
  position: absolute;
  top: 120rpx;
  left: 130rpx;
}

.separator {
  width: 95%;
  border: 1px solid rgb(228, 228, 228);
  position: absolute;
  bottom: 0;
}

.content {
  width: 100%;
  height: 100%;
  position: relative;
  /* border: 1px solid red; */
}

.homeworkDetail {
  width: 600rpx;
  height: 80rpx;
  background-color: #46A1DD;
  color: white;
  font-weight: bold;
  font-size: 36rpx;
  margin-top: 80rpx;
}

.score {
  font-size: 200rpx;
  color: #46A1DD;
  position: absolute;
  top: 25%;
  left: 18%;
}
.text{
  font-size: 100rpx;
  color: #000000;
  position: absolute;
  top: 31%;
  left: 70%;
}